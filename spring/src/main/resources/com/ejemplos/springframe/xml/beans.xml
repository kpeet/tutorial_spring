<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="messi" class="com.ejemplos.beans.Jugador">
		<property name="numero" value="10"></property>
		<property name="nombre" value="Lionel Messi"></property>
		<!-- referencia a la clase que implementa su equipo -->
		<property name="equipo" ref="barcelona"></property>
	</bean>
	<!-- clase que referencia a barcelona -->
	<bean id="barcelona" class="com.ejemplos.beans.Barcelona"></bean>
</beans>
